
<div id="wrapper">
  <div id="main">
    <div class="container">
      <div class="buttons">
          <button class="nav-toggler toggle-slide-left"><i class="fa fa-bars"></i></button>
      </div><!-- /buttons -->

      <section class="content">  
<!-- This contains the article -->
				<div class="row">
					<div class="large-12 large-centered columns entire-article">
						<div class="row">
							<div class="small-8 medium-8 large-8 small-centered columns article_header">
								<h1 class="article_head"><%= @article.title %></h1>
								<p>Written by: <%= link_to @article.user.name, user_path(@article.user) %></p>
								<p><%= @article.created_at %></p>
							</div>
						</div>

						<div class="row">
							<div class="small-8 medium-8 large-8 small-centered columns">
								<p class="article-body"><%= @article.text %></p>
							</div>
						</div>
						
					</div>
				</div>

<!-- This contains the comments -->
				<div class="row comments-panel">
					<div class="large-12 large-centered columns">

				
							<div class="row comments-header">
								<div class="large-12 large-centered columns">
									<h3 class="text-center">Comments</h3>
									<!-- <p class="text-center">Comments for <%#= @picture.title %></p> -->
								</div>
							</div>

							<% @article.comments.each do |comment| %>
								<div class="row comments-container">
									<div class="large-12 columns">

										<div class="row">
											<div class="large-12 columns comment-info">
												<% if comment.user != nil %>
													<p id='commenter'><strong><%= comment.user.name %></strong></p>
													<p><em><%= comment.created_at %></em></p>
													<p><%= link_to "Delete", [comment.article, comment], :method => :delete %></p>
												<% end %>
											</div>	
										</div>

										<div class="row comment-text">
											<div class="large-11 columns">
												<p><%= comment.description %></p>
											</div>
										</div>
									

									</div>
								</div>

							<% end %>

				<%if current_user %>
					<div class="row">
						<div class="large-12 columns">

							<div class="row">
								<div class="large-12 columns new-comment-header">
									<h3>New Comment</h3>
								</div>
							</div>
							

							<div class="row">
								<div class="large-11 columns new-comment-input">
									<%= form_for ([@article, @comment]) do |f| %>
										<% if @comment.errors.any? %>
											<div id="error_explanation">
												<h2><%= pluralize(@comment.errors.count, "error") %> prohibited this review from being saved:</h2>

					        			<ul>
					        				<% @comment.errors.full_messages.each do |msg| %>
					          				<li><%= msg %></li>
					       					<% end %>
					        			</ul>
				      				</div>
				    				<% end %>

							    	<div class="field">
						      		<%= f.label :comment %><br />
						      		<%= f.text_area :description %>
						    		</div>
						    		<div class="actions">
						      		<%= f.submit 'post', :class => 'button [tiny small large] save-button' %>
						    		</div>
				  				<% end %>
				  			</div>
			    		</div>

						</div>
			    </div>
				<% end %>


					</div>
				</div>
    	</section><!-- /.content -->
  	</div>
  </div><!-- #main -->

</div><!-- /#wrapper -->


    <nav class="menu slide-menu-left">
        <ul>
            <li><button class="close-menu cmn-t-bg"><i class="fa fa-times"></i></button></li>
            <li id="logo"><%= link_to "Jitter", root_path %></li>       
          <% if current_user%>
	          <li><%= link_to "New Story", new_article_path %></li>
            <li><%= link_to "Your Blog", user_path(current_user) %></li>
            <li><a href="#">Settings</a></li>
            <li><%= link_to 'Log out', log_out_path%></li>
          <% else %>
	          <li><%= link_to "Log in", new_session_path %></li>
	          <li><%= link_to "Sign up", new_user_path %></li>
          <% end %>
          <li><a href="#">Help</a></li>
        </ul>
    </nav><!-- /slide menu left -->

<script type="text/javascript" src="Javascript/articles.js"></script>
