      <div id="wrapper">
        <div id="main">
            <div class="container">
                <div class="buttons">
                    <button class="nav-toggler toggle-slide-left"><i class="fa fa-bars"></i></button>
                </div><!-- /buttons -->
                <section class="content">
                    

							<div class="row">
								<div class="large-12 large-centered columns entire-article">
									<div class="row">
										<div class="small-8 medium-8 large-8 small-centered columns article_header">
											<h1 class="article_head"><%= @article.title %></h1>
											<p>Written by:<%= @article.user %></p>
											<p><%= @article.created_at %></p>
										</div>
									</div>

									<div class="row">
										<div class="small-8 medium-8 large-8 small-centered columns">
											<p class="article-body"><%= @article.text %></p>
										</div>
									</div>
									
								</div>
							</div>


							</div>
									<div class="row comments-panel">
										<div class="large-12 large-centered columns">

											<% if current_user %>
												<div class="row comments-header">
													<div class="large-12 large-centered columns">
														<h3 class="text-center">Comments</h3>
														<!-- <p class="text-center">Comments for <%#= @picture.title %></p> -->
													</div>
												</div>

												<% @article.comments.each do |comment| %>
													<div class="row comments-container">
														<div class="large-12 columns">

															<div class="row">
																<div class="large-12 columns comment-info">
																	<% if comment.user != nil %>
																		<p id='commenter'><strong><%= comment.user.name %></strong></p>
																		<p><em><%= comment.created_at %></em></p>
																		<p><%= link_to "Delete", [comment.picture, comment], :method => :delete %></p>
																	<% end %>
																</div>	
															</div>

															<div class="row comment-text">
																<div class="large-11 columns">
																	<p><%= comment.description %></p>
																</div>
															</div>
														

														</div>
													</div>

												<% end %>
											<% end %>

										<%if current_user %>
											<div class="row">
												<div class="large-12 columns">

													<div class="row">
														<div class="large-12 columns new-comment-header">
															<h3>New Comment</h3>
														</div>
													</div>
													

													<div class="row">
														<div class="large-11 columns new-comment-input">
															<%= form_for ([@article, @comment]) do |f| %>
																<% if @comment.errors.any? %>
																	<div id="error_explanation">
																		<h2><%= pluralize(@comment.errors.count, "error") %> prohibited this review from being saved:</h2>

											        			<ul>
											        				<% @comment.errors.full_messages.each do |msg| %>
											          				<li><%= msg %></li>
											       					<% end %>
											        			</ul>
										      				</div>
										    				<% end %>

													    	<div class="field">
												      		<%= f.label :comment %><br />
												      		<%= f.text_area :description %>
												    		</div>
												    		<div class="actions">
												      		<%= f.submit 'post', :class => 'button' %>
												    		</div>
										  				<% end %>
										  			</div>
									    		</div>

												</div>
									    </div>

										<% else %>
											<div class="row">
												<div class="small-10 small-centered columns login-comment-prompt">
													<!-- <div id="login-prompt-container"> -->
												  	<p class="text-center">Please <%= link_to "log in", new_session_path %> to add a review.</p> 
													<!-- </div> -->
												</div>
											</div>
										<% end %>


										</div>
									</div>
                </section><!-- /.content -->
            </div>
        </div><!-- #main -->

    </div><!-- /#wrapper -->

<script type="text/javascript" src="Javascript/articles.js"></script>
